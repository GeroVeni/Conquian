<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <EditText
        android:id="@+id/list_item_player_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:inputType="number"
        android:padding="4dp"
        android:hint="@string/score_edit_text_hint"/>
    <TextView
        android:id="@+id/list_item_player_score_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_player_edit_text"
        android:padding="4dp"
        tools:text="Score"/>
    <TextView
        android:id="@+id/list_item_player_hats_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_player_score_text_view"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/hat"
        android:padding="4dp"
        tools:text="Hats"/>
    <TextView
        android:id="@+id/list_item_player_crowns_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_player_hats_text_view"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/crown"
        android:padding="4dp"
        tools:text="Crowns"/>
    <TextView
        android:id="@+id/list_item_player_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_player_hats_text_view"
        android:padding="4dp"
        tools:text="Name"/>
</RelativeLayout>